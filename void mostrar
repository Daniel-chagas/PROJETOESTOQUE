void mostrar() {
    if (inicio == NULL) {
        printf("A lista de produtos estÃ¡ vazia.\n");
        return;
    }
    printf("\n LISTA DE PRODUTOS \n");
    Produto *atual = inicio;
    while(atual != NULL) {
        printf("Cod: %d | Nome: %s | R$ %.2f | Qtd: %d\n", 
            atual->cod, atual->nome, atual->preco, atual->qtd);
        atual = atual->prox;
    }
    printf("-------------------------\n");
}


